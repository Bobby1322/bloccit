
<div class="row">
    <h1>Confirmation</h1>
    <p>Verify the information below!</p>
    <p>Email: <%= @user.email %> </p>
    <p>Name: <%= @user.name %> </p>
</div>  
<div class="row">
    <div class="col-sm-4", style="width: auto;">
        <%= button_to "Yes", {controller: "users", action: "create", params: params.permit!}, class: 'btn btn-success' %>
    </div>
    <div class="col-sm-4", style="width: auto;">
        <%= button_to "No", {controller: "users", action: "new"}, class: 'btn btn-failure', :method => :get %>
    </div>
</div>

